#!/bin/sh

### BEGIN INIT INFO
# Provides:          wallchanger
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Change automatically your wallpaper
# Description:       Wallchanger
### END INIT INFO

PATH="/usr/sbin:/usr/bin:/sbin:/bin"
DESC="Wallchanger Daemon"
NAME="wallchanger"
DAEMON="_userhome_/.wallchanger/$NAME"
PIDFILE="/var/run/$NAME.pid"
SCRIPTNAME="/etc/init.d/$NAME"
DAEMONUSER="_username_"

#test -x $DAEMON || exit 0

. /lib/lsb/init-functions

d_start () {
	start-stop-daemon --background --name $NAME --start --chuid $DAEMONUSER --exec $DAEMON >> /var/log/wallchanger.log
}

d_stop () {
	start-stop-daemon --name $NAME --stop --retry 5 --name $NAME /var/log/wallchanger.log
}

case "$1" in

	start|stop)
		d_${1}
		;;

	restart|reload|force-reload)
			d_stop
			d_start
		;;

	force-stop)
		d_stop
		killall -q $NAME || true
		sleep 2
		killall -q -9 $NAME || true
		;;

	status)
		status_of_proc "$NAME" "$DAEMON" "system-wide $NAME" && exit 0 || exit $?
		;;
	*)
		echo "Usage: /etc/init.d/$NAME {start|stop|force-stop|restart|reload|force-reload|status}"
		exit 1
		;;
esac
exit 0
